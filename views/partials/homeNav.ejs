    <div id="ec-main-menu-desk" class="d-none d-lg-block sticky-nav">
        <div class="container position-relative">
            <div class="row">
                <div class="col-md-12 align-self-center">
                    <div class="ec-main-menu">
                        <a href="javascript:void(0)" class="ec-header-btn ec-sidebar-toggle">
                            <img src="assets/images/icons/category-icon.svg" class="svg_img header_svg" alt="icon" />
                        </a>
                        <ul>
                            <li><a href="/">Home</a></li>
                            
                            <li class="dropdown"><a href="products">Products</a>
                                <ul class="">

                                </ul>
                            </li>
                            <li class="dropdown"><a href="get-wishlist-items">Wishlist</a>

                            </li>
                            <% if (cart){%>
                                <li class="dropdown"><span class="main-label-note-new" data-toggle="tooltip"
                                        title="NEW"></span><a href="Orders">Orders</a>
                                    <ul class="">

                                </li>
                                <%}else{%>
                                    <li class="dropdown"><span class="main-label-note-new" data-toggle="tooltip"
                                            title="NEW"></span><a href="login">Login</a>
                                        
                                    </li>
                                    <%}%>
                        </ul>
                        </li>
                        <!-- <li class="dropdown"><a href="contactUs">Contact Us</a>

                        </li> -->

                        </ul>
                    </div>
                </div>
            </div>
