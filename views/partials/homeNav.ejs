                        <button class="search-btn" type="submit">
                            <span>Search</span>
                        </button>
                    </form> -->
                    <!-- Ec Header Search End -->

                    <!-- Ec Header Button Start -->
                    <div class="align-self-center">
                        <div class="ec-header-bottons">
                            <%var name,id%>
                                <!-- Header User Start -->
                                <div class="ec-header-user dropdown">
                                    <%if (name){%>
                                        <button class="dropdown-toggle" data-bs-toggle="dropdown"><img
                                                src="assets/images/icons/user.svg" class="svg_img header_svg"
                                                alt="" /><span style="color:#777777 ;"
                                                class="d-flex align-items-center d-inline">Hello <%= name%></span>
                                        </button>

                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <!-- <li><a class="dropdown-item" href="signUp">signUp</a></li> -->
                                            <li><a class="dropdown-item" href="userprofile<%=id%>">User Profile</a></li>
                                            
                                            <li><a class="dropdown-item" href="logout">Logout</a></li>
                                        </ul>

                                        <%}else {%>
                                            <button class="dropdown-toggle" data-bs-toggle="dropdown"><img
                                                    src="assets/images/icons/user.svg" class="svg_img header_svg"
                                                    alt="" /></button>
                                            <ul class="dropdown-menu dropdown-menu-right">
                                                <li><a class="dropdown-item" href="signUp">signUp</a></li>
                                                <!-- <li><a class="dropdown-item" href="checkout.html">Checkout</a></li> -->
                                                <li><a class="dropdown-item" href="login.html">Login</a></li>
                                            </ul>
                                            <%}%>
                                </div>
                                <%var cart%>
                                    <!-- Header User End -->
                                    <!-- Header wishlist Start -->
                                    <%if(cart){%>
                                        <a href="wishlist" class="ec-header-btn ec-header-wishlist">
                                            <div class="header-icon"><img src="assets/images/icons/wishlist.svg"
                                                    class="svg_img header_svg" alt="" /></div>
                                            <span class="ec-header-count">
                                                <% let count %>
                                                    <%= count %>
                                            </span>
                                        </a>

                                        <!-- Header wishlist End -->
                                        <!-- Header Cart Start -->
                                        <!-- <a href="#ec-side-cart" class="ec-header-btn ec-side-toggle">
                                            <div class="header-icon"><img src="assets/images/icons/cart.svg"
                                                    class="svg_img header_svg" alt="" /></div>
                                            <span id="cart-count" class="ec-header-count cart-count-lable">
                                                <%=cart.products.length%>
                                            </span>

                                        </a> -->
                                        <a href="/cart"><img src="assets/images/icons/cart.svg"
                                            class="svg_img header_svg" alt="" /><span style=" color: black; border-radius: 50%; width: 15px; height: 15px; background-size: 30px; border-color: antiquewhite;" id="cart-count" class="ec-header-count cart-count-lable">
                                                <%=cart.products.length%>
                                            </span>
                                            
                                        </a>
                                        <!-- Header Cart End -->
                                        <%}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Ec Header Button End -->
    <!-- Header responsive Bottom  Start -->
    <div class="ec-header-bottom d-lg-none">
        <div class="container position-relative">
            <div class="row ">

                <!-- Ec Header Logo Start -->
                <div class="col">
                    <div class="header-logo">
                        <a href="index.html"><img src="assets/images/logo/logo.png" alt="Site Logo" /><img
                                class="dark-logo" src="assets/images/logo/dark-logo.png" alt="Site Logo"
                                style="display: none;" /></a>
                    </div>
                </div>
                <!-- Ec Header Logo End -->
                <!-- Ec Header Search Start -->
                <div class="col">
                    <div class="header-search">
                        <form class="ec-btn-group-form" action="#">
                            <input class="form-control ec-search-bar" placeholder="Search products..." type="text">
                            <button class="submit" type="submit"><img src="assets/images/icons/search.svg"
                                    class="svg_img header_svg" alt="icon" /></button>
                        </form>
                    </div>
                </div>
                <!-- Ec Header Search End -->
            </div>
        </div>
    </div>
